      		<div class="focus_text"  >{{= focus.content }}</div>
      	</div>
      	
      	<div class="subcontent_right" >
      			<div class="focus_reference"  >      	
							{{ _.each(focus.sources, function(source) { }}     
							<div><a href="{{= source.url }}">{{= source.title }}</a></div>	
							{{ }); }}  
      			</div>
      			
      				{{ if (focus.image_url != null) { }}
